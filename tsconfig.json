{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "@types/express"
    ]
  },
  "include": [
    "typings/**/*.d.ts",
    "src",
    "cli",
    "browser",
    "scripts/rollup.config.tsonfig.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/typescript",
    "browser/dist"
  ]
}